{
    "name": "{vendor}/{package_name}",
    "description": "{description}",
    "type": "library",
    "license": "MIT",
    "require": {
        "php": "{php_version}"
    },
    "require-dev": {

    },
    "autoload": {
        "psr-4": {
            "{vendor}\\{namespace}\\": "src/",
            "{vendor}\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "./vendor/bin/pest",
        "analyse": "./vendor/bin/phpstan analyse"
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    }
}
